{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@api/*": ["./src/api/*"],
      "@assets/*": ["./assets/*"],
      "@utils/*": ["./src/utils/*"],
      "@ui/*": ["./src/components/ui/*"],
      "@icons/*": ["./src/components/icons/*"],
    },
    "esModuleInterop": true,
    "checkJs": true
  },
   "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "android",
    "ios",
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}